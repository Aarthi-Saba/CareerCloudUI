@model IEnumerable<CareerCloud.Pocos.SystemLanguageCodePoco>

@{
    ViewData["Title"] = "System Language Code Index";
}

<h1>System Language Code Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NativeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NativeName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LanguageID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LanguageID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LanguageID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
